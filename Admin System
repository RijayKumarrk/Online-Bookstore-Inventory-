package project;
import java.sql.SQLException;
import java.util.Scanner;
import java.util.Stack;
public class AdminSystem {

AdminDatabaseManager db;  
    private Stack<String> recentActions;  
    public AdminSystem(AdminDatabaseManager dbManager) {  
        db = dbManager;  
        recentActions = new Stack<>();  
    }  
    public void addBook(Scanner scanner) throws SQLException {  
        System.out.print("Enter book ID: ");  
        int id = scanner.nextInt();  
        scanner.nextLine();  
        System.out.print("Enter book title: ");  
        String title = scanner.nextLine();  
        System.out.print("Enter author: ");  
        String author = scanner.nextLine();  
        System.out.print("Enter price: ");  
        double price = scanner.nextDouble();  
        scanner.nextLine();  
        db.addBook(id, title, author, price);  
        recentActions.push("Added book: " + title);  
    }  
    public void showRecentActions() {  
        if (recentActions.isEmpty()) {  
            System.out.println("No recent actions.");  
        } else {  
            System.out.println("\nRecent Admin Actions:");  
            for (String action : recentActions) {  
                System.out.println("- " + action);  
            }  
        }  
    }  
}
